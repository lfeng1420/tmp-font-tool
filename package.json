{
    "$schema": "./@types/schema/package/index.json",
    "package_version": 2,
    "name": "tmp-font-tool",
    "version": "1.0.0",
    "author": "Cocos Creator",
    "editor": ">=3.8.7",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w"
    },
    "description": "i18n:tmp-font-tool.description",
    "main": "./dist/main.js",
    "dependencies": {
        "fs-extra": "^10.0.0",
        "maxrects-packer": "^2.7.3",
        "vue": "^3.1.4",
        "bluebird": "^3.7.2",
        "jimp": "^0.16.1",
        "lodash": "^4.17.21",
        "opentype.js": "^1.3.4"
    },
    "devDependencies": {
        "@cocos/creator-types": "^3.8.7",
        "@types/fs-extra": "^9.0.5",
        "@types/node": "^18.17.1",
        "typescript": "^5.8.2",
        "@types/bluebird": "^3.5.36",
        "@types/lodash": "^4.14.182",
        "@types/opentype.js": "^1.3.3"
    },
    "panels": {
        "default": {
            "title": "tmp-font-tool",
            "type": "dockable",
            "main": "dist/panels/default",
            "size": {
                "min-width": 600,
                "min-height": 500,
                "width": 960,
                "height": 680
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.extension",
                "label": "i18n:tmp-font-tool.description",
                "message": "open-panel"
            }
        ],
        "messages": {
            "open-panel": {
                "methods": [
                    "openPanel"
                ]
            },
            "panel-init": {
                "methods": [
                    "onPanelInit"
                ]
            },
            "change-config": {
                "methods": [
                    "onChangeConfig"
                ]
            },
            "click-btn-sync": {
                "methods": [
                    "onClickBtnSync"
                ]
            },
            "click-btn-save": {
                "methods": [
                    "onClickBtnSave"
                ]
            },
            "click-btn-export": {
                "methods": [
                    "onClickBtnExport"
                ]
            },
            "refresh-config": {
                "methods": [
                    "default.refreshConfig"
                ]
            },
            "update-progress": {
                "methods": [
                    "default.updateProgress"
                ]
            }
        }
    }
}
